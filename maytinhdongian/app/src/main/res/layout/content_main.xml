<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ongnauvi.maytinhdongian.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/txtv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/nb1"
            android:text="Nhập Số Thứ Nhất:" />

        <EditText
            android:id="@+id/nb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtv1"
            android:layout_below="@+id/nb1"
            android:text="Nhập Số Thứ Hai:" />

        <EditText
            android:id="@+id/nb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nb1"
            android:layout_below="@+id/nb1"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btncong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtv2"
            android:layout_below="@+id/nb2"
            android:text="+"
            android:layout_toStartOf="@+id/btntru" />

        <Button
            android:id="@+id/btntru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nb2"
            android:text="-"
            android:layout_toStartOf="@+id/btnnhan" />

        <Button
            android:id="@+id/btnnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nb2"
            android:text="X"
            android:layout_toStartOf="@+id/btnchia" />

        <Button
            android:id="@+id/btnchia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nb2"
            android:text="/"
            android:layout_alignEnd="@+id/nb2" />

        <TextView
            android:id="@+id/txtvkq"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btncong"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_alignStart="@+id/btncong" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
