<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ongnauvi.thongtincanhan.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/ttcn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.10"
        android:background="#41A7AD"
        android:gravity="center"
        android:text="Thông Tin Cá Nhân"
        android:textColor="#FFFF00"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ Tên:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dtten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CMND:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dtcmnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng Cấp"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:background="#0040FF"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rgrbangcap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ratrungcap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trung Cấp" />

            <RadioButton
                android:id="@+id/racaodang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cao Đẳng" />

            <RadioButton
                android:id="@+id/radaihoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đại Học" />
        </RadioGroup>
    </TableRow>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở Thích"
        android:gravity="center"
        android:background="#0040FF"
        android:textColor="#FFFF00"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc Báo" />

        <CheckBox
            android:id="@+id/checksach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc Sách" />

        <CheckBox
            android:id="@+id/checkcoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc coding" />
    </TableRow>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0040FF"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:text="Thông Tin Bổ Sung" />

    <EditText
        android:id="@+id/dtbs"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btngui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi Thông Tin" />

</LinearLayout>
